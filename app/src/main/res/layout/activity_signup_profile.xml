<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Profile_first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <ImageButton
            android:id="@+id/Profile_backspaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/arrow_back"
            android:onClick="Profile_backspace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="프로필 설정"
            android:textColor="#000000"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/signup_profileactivity_Imagebutton_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:background="@drawable/more_vert" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Profile_second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Profile_first_layout"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signup_profileactivity_Imageview_backgroundimage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/profilebackground" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Profile_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/profile_icon"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Profile_three_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Profile_second_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signup_profile_edittext_nickname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:textColorHint="#000000" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>


        </LinearLayout>

        <EditText
            android:id="@+id/Profile_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/signupactivity_stroke_item"
            android:gravity="center"
            android:hint="이름  "
            android:textColorHint="#000000" />

        <RadioGroup
            android:id="@+id/Profile_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Profile_radio_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/Profile_radio_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="여자"
                android:textColor="#000000" />

        </RadioGroup>

        <EditText
            android:id="@+id/signup_profile_edittext_profile_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/signupactivity_stroke_item"
            android:gravity="center"
            android:hint="생년월일"
            android:textColorHint="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/signup_profile_button_Profile_okbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>