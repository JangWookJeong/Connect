<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/Profile_first_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/Profile_backspaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:onClick="Profile_backspace"
        android:background="@drawable/backspace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:text="프로필 설정"
        android:textSize="19dp"
        android:textColor="#000000"/>
</LinearLayout>

<RelativeLayout
    android:id="@+id/Profile_second_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Profile_first_layout"
    android:layout_marginBottom="15dp"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/signup_profileactivity_Imageview_backgroundimage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/image2"
        android:scaleType="fitXY"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Profile_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:civ_border_color="#FF252424"
        app:civ_border_width="2dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/image1"
        />
</RelativeLayout>

<LinearLayout
    android:id="@+id/Profile_three_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Profile_second_layout"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/signup_profile_edittext_nickname"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="닉네임"
            android:textColorHint="#000000"
            android:background="@drawable/signupactivity_stroke_item"/>

        <Button
            android:id="@+id/signup_profile_button_nickname_checkbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:text="중복확인"
            android:textSize="15.5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/Profile_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/signupactivity_stroke_item"
        android:gravity="center"
        android:hint="이름  "
        android:textColorHint="#000000"/>

    <RadioGroup
        android:id="@+id/Profile_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Profile_radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/Profile_radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="여자"
            android:textColor="#000000" />

    </RadioGroup>

    <EditText
        android:id="@+id/signup_profile_edittext_profile_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColorHint="#000000"
        android:hint="생년월일"
        android:background="@drawable/signupactivity_stroke_item"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/signup_profile_button_Profile_okbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록"
        android:textColor="#000000" />
</LinearLayout>
</RelativeLayout>