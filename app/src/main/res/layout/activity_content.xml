<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999595"
    tools:context=".Activity.MypageActivity_Package.ContentActivity">

    <RelativeLayout
        android:id="@+id/contentactivity_first_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/contentactivity_imagebutton_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/blue"
            android:src="@drawable/vert_black" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/contentactivity_second_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentactivity_first_relativelayout"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contentactivity_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="제목을 입력하는 곳입니다  여기서 제목이 보여집니다."
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/contentactivity_three_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentactivity_second_linearlayout"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contentactivity_circleimageview_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/image3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contentactivity_textview_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리자" />

                <TextView
                    android:id="@+id/contentactivity_textview_register_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="2018.10.04" />
            </LinearLayout>

            <TextView
                android:id="@+id/contentactivity_imagebutton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="180dp"
                android:padding="8dp"
                android:text="수정"
                android:textColor="#1a76e6"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contentactivity_last_linearlayout"
        android:layout_below="@+id/contentactivity_second_linearlayout"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.github.irshulx.Editor
            android:id="@+id/contentactivity_texteditor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:render_type="Editor"></com.github.irshulx.Editor>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentactivity_last_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/send" />

        <EditText
            android:id="@+id/contentactivity_edittext_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:background="@drawable/content_item_stroke"
            android:hint="댓글을 입력해주세요" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="보내기"
            android:textStyle="bold"
            android:textColor="@color/blue" />


    </LinearLayout>

</RelativeLayout>


